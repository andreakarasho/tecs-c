{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Debug: example.c",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-std=c99",
        "-Wall",
        "-Wextra",
        "-O0",
        "-g",
        "-I.",
        "-o",
        "build/example.exe",
        "examples/example.c"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "Build Debug: example_bevy.c",
      "type": "shell",
      "command": "gcc",
