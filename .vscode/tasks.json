    },
    {
      "label": "Build Debug: example_bevy_raylib_3d.c",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-std=c99",
        "-Wall",
        "-Wextra",
        "-O0",
        "-g",
        "-I.",
        "-I./raylib-5.5_win64_mingw-w64/include",
        "-o",
        "build/example_bevy_raylib_3d.exe",
        "examples/example_bevy_raylib_3d.c",
        "./raylib-5.5_win64_mingw-w64/lib/libraylib.a",
        "-lopengl32",
        "-lgdi32",
        "-lwinmm"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Build All Debug Examples",
      "type": "shell",
      "command": "make",
      "args": ["debug"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Clean Build",
      "type": "shell",
      "command": "make",
      "args": ["clean"],
      "problemMatcher": []
    }
  ]
