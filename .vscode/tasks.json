      "command": "gcc",
      "args": [
        "-std=c99",
        "-Wall",
        "-Wextra",
        "-O0",
        "-g",
        "-I.",
        "-o",
        "build/example_bevy_performance.exe",
        "examples/example_bevy_performance.c"
      ],
      "group": "build",
